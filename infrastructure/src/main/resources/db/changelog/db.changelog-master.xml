<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="module-4_infrastructure_postgres_adapter_1" author="Nikita Koshelev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="dlv_order"/>
            </not>
        </preConditions>

        <createTable tableName="dlv_order">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_order"/>
            </column>
            <column name="status" type="varchar(16)"/>
            <column name="location" type="varchar(64)"/>
            <column name="courier_id" type="uuid"/>
        </createTable>

        <createIndex indexName="idx_dlv_order_id" tableName="dlv_order">
            <column name="id"/>
        </createIndex>
    </changeSet>

    <changeSet id="module-4_infrastructure_postgres_adapter_2" author="Nikita Koshelev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="dlv_courier"/>
            </not>
        </preConditions>

        <createTable tableName="dlv_courier">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_courier"/>
            </column>
            <column name="name" type="varchar(30)"/>
            <column name="status" type="varchar(16)"/>
            <column name="location" type="varchar(64)"/>
            <column name="transport" type="varchar(16)"/>
        </createTable>

        <createIndex indexName="idx_dlv_courier_id" tableName="dlv_courier">
            <column name="id"/>
        </createIndex>
    </changeSet>

    <changeSet id="module-4_infrastructure_postgres_adapter_3" author="Nikita Koshelev">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT count(*) FROM dlv_courier WHERE id = '00000000-0000-0000-0000-000000000001'
            </sqlCheck>
        </preConditions>

        <insert tableName="dlv_courier">
            <column name="id" value="00000000-0000-0000-0000-000000000001"/>
            <column name="name" value="Вася Пешков"/>
            <column name="status" value="FREE"/>
            <column name="location" value="5,5"/>
            <column name="transport" value="PEDESTRIAN"/>
        </insert>
    </changeSet>

    <changeSet id="module-4_infrastructure_postgres_adapter_4" author="Nikita Koshelev">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT count(*) FROM dlv_courier WHERE id = '00000000-0000-0000-0000-000000000002'
            </sqlCheck>
        </preConditions>

        <insert tableName="dlv_courier">
            <column name="id" value="00000000-0000-0000-0000-000000000002"/>
            <column name="name" value="Петя Велосипедкин"/>
            <column name="status" value="FREE"/>
            <column name="location" value="1,5"/>
            <column name="transport" value="BICYCLE"/>
        </insert>
    </changeSet>

    <changeSet id="module-4_infrastructure_postgres_adapter_5" author="Nikita Koshelev">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT count(*) FROM dlv_courier WHERE id = '00000000-0000-0000-0000-000000000003'
            </sqlCheck>
        </preConditions>

        <insert tableName="dlv_courier">
            <column name="id" value="00000000-0000-0000-0000-000000000003"/>
            <column name="name" value="Артур Машинин"/>
            <column name="status" value="FREE"/>
            <column name="location" value="9,9"/>
            <column name="transport" value="CAR"/>
        </insert>
    </changeSet>

</databaseChangeLog>
