        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT count(*) FROM order_status WHERE id in (1, 2, 3)
            </sqlCheck>
        </preConditions>

        <insert tableName="order_status">
            <column name="id" value="1"/>
            <column name="code" value="CREATED"/>
        </insert>
        <insert tableName="order_status">
            <column name="id" value="2"/>
            <column name="code" value="ASSIGNED"/>
        </insert>
        <insert tableName="order_status">
            <column name="id" value="3"/>
            <column name="code" value="COMPLETED"/>
        </insert>
    </changeSet>

    <changeSet id="create_order_table" author="Nikita Koshelev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="order"/>
            </not>
        </preConditions>

        <createTable tableName="order">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_order"/>
            </column>
            <column name="status_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="courier_id" type="uuid"/>
            <column name="location" type="varchar(64)"/>
        </createTable>

        <createIndex indexName="idx_order_id" tableName="order">
            <column name="id"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="order"
                baseColumnNames="status_id"
                constraintName="fk_order_status_id"
                referencedTableName="order_status"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="order"
                baseColumnNames="courier_id"
                constraintName="fk_order_courier_id"
                referencedTableName="courier"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="create_in_out_box_status_table" author="Nikita Koshelev">
